<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:title="@string/title_pref_font_size"
        android:key="fontsize"
        android:summary="@string/summary_pref_font_size"
        android:entries="@array/fontsize"
        android:entryValues="@array/fontsizeValues"
        android:defaultValue="14"
        />

    <ListPreference
        android:title="@string/title_pref_language"
        android:key="language"
        android:summary="@string/summary_pref_language"
        android:entries="@array/language"
        android:entryValues="@array/languageValues"
        android:defaultValue="English"
        />

    <CheckBoxPreference
        android:defaultValue="false"
        android:title="@string/title_pref_sleep"
        android:key="sleepPrefs"
        android:summaryOn="@string/summary_on_pref_sleep"
        android:summaryOff="@string/summary_off_pref_sleep"
        />
</PreferenceScreen>